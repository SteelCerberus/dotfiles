# interpreter for shell commands
set shell fish

# set internal field separator (IFS) to "\n" for shell commands
# This is useful to automatically split file names in $fs and $fx properly
# since default file separator used in these variables (i.e. 'filesep' option)
# is newline. You need to consider the values of these options and create your
# commands accordingly.
# set ifs "\n"

# leave some space at the top and the bottom of the screen
set scrolloff 10

# Use the `dim` attribute instead of underline for the cursor in the preview pane
set cursorpreviewfmt "\033[7;2m"

# use enter for shell commands
map <enter> shell

# show the result of execution of previous commands
map ` !true

# Opens in full-terminal neovim if a text file; else uses xdg-open
cmd open ${{
    if file -i "$fx" | grep -q "text/*"
        v $fx
    else
        xdg-open $fx 2>/dev/null
    end
}}

# mkdir command. See wiki if you want it to select created dir
map a :push %mkdir<space>

# Preview using Pistol and Kitty for images
set previewer ~/.config/lf/previewer.fish
set cleaner ~/.config/lf/cleaner.fish

# Show icons
set icons

# Update every 1 second
set period 1

# Removes the status bar from the copied file
map p :paste; clear

# Shortcuts
map gc :set hidden; cd ~/.dotfiles/.config
map gt :set hidden; cd "/mnt/drive/Documents/Georgia Tech/"
map gf :push %touch<space>

cmd trash %trash-put $fx
map D trash

cmd yank-file $printf '%s' "$f" | wl-copy
map <c-c> yank-file
map <c-y> yank-file

cmd d :delete

cmd fzf_search ${{
    set search_cmd "rg --column --line-number --no-heading --color=always --smart-case --follow --glob=!**/.git/* --glob=!**/venv/* --glob=!**/google-chrome/*"
    fzf --ansi --disabled --layout=reverse --header="Search in files" --delimiter=: \
        --bind="start:reload([ -n {q} ] && $search_cmd -- {q} || true)" \
        --bind="change:reload([ -n {q} ] && $search_cmd -- {q} || true)" \
        --bind="enter:become(lf -remote \"send $id select {1}\")" \
        --preview='~/.config/lf/cleaner.fish; ~/.config/lf/previewer.fish {1} "$FZF_PREVIEW_COLUMNS" "$FZF_PREVIEW_LINES" "$FZF_PREVIEW_LEFT" "$FZF_PREVIEW_TOP" {2}'
}}
map gs :fzf_search

cmd fzf_jump ${{
    set res "$(fd | fzf --reverse --header="Jump to location")"
    if test -n "$res"
        if test -d "$res"
            set cmd "cd"
        else
            set cmd "select"
        end
        lf -remote "send $id $cmd \"$res\""
    end
}}
map <c-f> :fzf_jump
